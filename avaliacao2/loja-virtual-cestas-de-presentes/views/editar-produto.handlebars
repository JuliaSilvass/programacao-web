<h1>{{titulo}}</h1>

<form action="/produtos/salvar-edicao" method="POST">
  <label for="codigo">Código:</label><br>
  <input type="text" id="codigo" name="codigo" value="{{produto.codigo}}" readonly><br><br>

  <label for="nome">Nome do produto:</label><br>
  <input type="text" id="nome" name="nome" maxlength="100" size="50" value="{{produto.nome}}" required><br><br>

  <label for="descricao">Descrição:</label><br>
  <textarea id="descricao" name="descricao" maxlength="280" cols="40" rows="5" required>{{produto.descricao}}</textarea><br><br>

  <label for="quantidade_estoque">Quantidade em estoque:</label><br>
  <input type="number" id="quantidade_estoque" name="quantidade_estoque" min="0" value="{{produto.quantidade_estoque}}" required><br><br>

  <label for="preco">Preço individual:</label><br>
  <input type="number" id="preco" name="preco" step="0.01" min="0" value="{{produto.preco}}" required><br><br>

  <label for="categoria">Categoria:</label><br>
  <select id="categoria" name="categoria" required>
    <option value="">Selecione</option>
    {{#each categorias}}
      <option value="{{this}}" {{#if (eq this ../produto.categoria)}}selected{{/if}}>{{this}}</option>
    {{/each}}
  </select><br><br>

  <label for="foto">Foto do produto:</label><br>
  <input type="text" id="foto" name="foto" value="{{produto.foto}}" required><br><br>

  <button type="submit">Salvar Alteração</button><br><br>
</form>
