<h1>{{titulo}}</h1>

<form>
  <label for="codigo">Código:</label><br>
  <input type="text" id="codigo" name="codigo" value="{{produto.codigo}}" readonly><br><br>

  <label for="nome">Nome do produto:</label><br>
  <input type="text" id="nome" name="nome" maxlength="100" size="50" value="{{produto.nome}}" readonly><br><br>

  <label for="descricao">Descrição:</label><br>
  <textarea id="descricao" name="descricao" maxlength="280" cols="40" rows="5" readonly>{{produto.descricao}}</textarea><br><br>

  <label for="quantidade">Quantidade em estoque:</label><br>
  <input type="number" id="quantidade" name="quantidade" min="0" value="{{produto.quantidade_estoque}}" readonly><br><br>

  <label for="preco">Preço individual:</label><br>
  <input type="number" id="preco" name="preco" step="0.01" min="0" value="{{produto.preco}}" readonly><br><br>

  <label for="categoria">Categoria:</label><br>
  <select id="categoria" name="categoria" disabled>
    <option value="">Selecione</option>
    {{#each categorias}}
      <option value="{{this}}" {{#if (eq this ../produto.categoria)}}selected{{/if}}>{{this}}</option>
    {{/each}}
  </select><br><br>

  <label for="foto">Foto do produto:</label><br>
  <input type="text" id="foto" name="foto" value="{{produto.foto}}" readonly><br><br>


<button type="button" onclick="window.location.href='/produtos/excluir/{{produto.codigo}}'" >Excluir produto</button>
</form>
