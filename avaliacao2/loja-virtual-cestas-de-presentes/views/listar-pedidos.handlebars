<h1>{{titulo}}</h1>

<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>Código</th>
      <th>Data do Pedido</th>
      <th>Nome do Cliente</th>
      <th>CPF/CNPJ</th>
      <th>Valor Total</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each pedidos}}
      <tr>
        <td>{{this.codigo}}</td>
        <td>{{this.data_criacao}}</td>
        <td>{{this.cliente_nome}}</td>
        <td>{{this.cliente_cpf_cnpj}}</td>
        <td>R$ {{this.preco_total}}</td>
        <td><a href="/pedidos/{{this.codigo}}">Consultar</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
